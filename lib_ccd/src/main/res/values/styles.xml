<resources>

    <style name="LoginEditText">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_base_txt</item>
        <item name="android:textColorHint">@color/color_base_txt</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:maxLength">16</item>
        <item name="background">@drawable/shape_login_txt_bg</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_base_txt</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="background">@drawable/shape_login_txt_bg</item>
    </style>

</resources>
